<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Almanteq</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/app.css" rel="stylesheet">  
    <link href="css/bootstrap-responsive.css" rel="stylesheet">
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="container">
      <div class="masthead">
        <div class="row">
          <div class="span6">
            <br>
            <ul class="nav nav-pills">
              <li><a href="/offers">المشتريات</a></li>
              <li><a href="/sales">المبيعات</a></li>
              <li><a href="/users">المستخدمين</a></li>
              <li><a href="/customers">الزبائن</a></li>
              <li class="active"><a href="/stock">المخزن</a></li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" ref="#"> <div id="user-target"></div></a>
                <ul class="dropdown-menu">
                  <li><a href="/user">حسابي</a></li>
                  <li><a href="/logout">خروج</a></li>
                </ul>
              </li>
            </ul>
          </div>
          <div class="span3">
            <h3 class="muted pull-right"><img id="ownerLogo" src="img/logo.jpg" class="logo"> Almanteq</h3>
          </div>
        </div>
        <div class='notifications top-right'>
        </div>
        <div class="container-fluid">
          <div >
            <div id="systems-target">
            </div>
          </div>
        </div>
      </div>
    </div>
            
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script id="user-template" class="tmpl" type="text/x-handlebars-template">
      {{name}}<b class="caret"></b>    
    </script>
    <script id="systems-template" class="tmpl" type="text/x-handlebars-template">
      <legend>Stock / المخزن
        <ul class="pager pull-right">
          <li id="prevli"><a href="#" id="prev">السابق</a></li>
          <li id="nextli"><a href="#" id="next">التالي</a></li>
        </ul>
      </legend>
      <table id = "systems" class="table table-striped"  >
        <thead>
          <tr>
            <th>System</th>
            <th>الصنف</th>
            <th>BarCode</th>
            <th>السعر</th>
            <th>الكمية</th>
            <th>المتبقي</th>
            <th>اظهار</th>
          </tr>
        </thead>
        <tbody>
        {{#each systems}}
          <tr class="{{stockStatus this.quantity this.left}}" id="s{{this.iditem}}">
            <td>{{this.system}}</td>
            <td>{{this.class}}</td>
            <td>{{this.barcode}}</td>
            <td>{{this.itemprice}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.left}}</td>
            <td><a class="btn btn-mini" href="system.html?id={{this.iditem}}&uid={{this.offer_idoffer}}"><i class="icon-search"></i></a></td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </script>
    <script src="js/jquery-1.10.1.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/purl.js"></script>
    <script src="js/handlebars-1.0.rc.1.js"></script>
    <script src="js/helpers2.js"></script>
    <script src="js/stock.js"></script>
    <script src="js/bootstrap-notify.js"></script>
  </body>
</html>
