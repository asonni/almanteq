
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Almanteq</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">  
    <link href="/css/bootstrap-responsive.css" rel="stylesheet">
    <link href="/css/datepicker.css" rel="stylesheet">  

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="container">
      <div class="masthead">
        
        <div class="row">
          <div class="span6">
            <br>
            <ul class="nav nav-pills">
              <li><a href="/offers">المشتريات</a></li>
              <li><a href="/sales">المبيعات</a></li>
              <li class="active"><a href="/users">المستخدمين</a></li>
              <li><a href="/customers">الزبائن</a></li>
              <li><a href="/stock">المخزن</a></li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" ref="#"> <div id="user-target"></div></a>
                <ul class="dropdown-menu">
                  <li><a href="/user">حسابي</a></li>
                  <li><a href="/logout">خروج</a></li>
                </ul>
              </li>
            </ul>
          </div>
          <div class='notifications top-right'>
          </div>
          <div class="row-fluid">
            <h3 class="muted pull-right"><img id="ownerLogo" src="/img/logo.jpg" class="logo"> Almanteq</h3>
          </div>
        </div>
        <div  id="users-target">
        </div>
        <!-- Activate Modal -->
        <div id="activateModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="newMsgLabel" >تفعيل المستخدم الجديد</h3>
          </div>
          <div class="modal-body">
            <p>تفعيل المستخدم</p>
            <form  id="activate">
              <input type="text" readonly id="userName" val="">
              <input type="hidden" id="userId" val="">
            </form>
          </div>
          <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">إلغاء</button>
            <button type="submit" value= "submit" class="btn btn-primary confirmActivate">تفعيل</button>
          </div>
        </div>
        <!-- Delete Modal -->
        <div id="delUserModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="newMsgLabel" >إلغاء المستخدم</h3>
          </div>
          <div class="modal-body">
            <p>هل انت متأكد من إلغائك للمستخدم؟</p>
            <form  id="delUser">
              <input type="text" readonly id="userName2" val="">
              <input type="hidden" id="userId2" val="">
            </form>
          </div>
          <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">إلغاء</button>
            <button type="submit" value= "submit" class="btn btn-primary confirmDelUser">إزالة</button>
          </div>
        </div>
      </div>
    </div>
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script type"text/javascript">
      function activate(name,userId){
        $("#userName").val(name);
        $("#userId").val(userId);
      }
      function deleteMe(name,userId){
        $("#userName2").val(name);
        $("#userId2").val(userId);
      }
    </script>
    <script id="user-template" class="tmpl" type="text/x-handlebars-template">
      {{name}}<b class="caret"></b>    
    </script>
    <script id="users-template" class="tmpl" type="text/x-handlebars-template">
      <legend>Users / المستخدمين</legend>
      <table id = "scroll" class="table table-striped" >
        <thead>
          <tr>
            <th>الإسم</th>
            <th>email</th>
            <th>تفعيل</th>
            <th>إزالة</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr id="s{{this.iduser}}">
              <td>{{this.name}}</td>
              <td>{{this.email}}</td>
              <td id="a{{this.iduser}}">{{#unless this.active}}<a class="btn btn-mini btn-success" href="#activateModal"  data-toggle="modal" onClick='activate("{{this.name}}","{{this.iduser}}");return false;'><i class="icon-ok"></i></a>{{/unless}}{{#if this.active}}<span class="label label-warning"><i class="icon-thumbs-up"></i></span>{{/if}}</td>
              <td><a class="btn btn-mini btn-danger" href="#delUserModal" onClick='deleteMe("{{this.name}}","{{this.iduser}}");return false;'  data-toggle="modal"><i class="icon-remove"></i></a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </script>
    <script src="/js/jquery-1.10.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/prettify.js"></script>
    <script src="/js/bootstrap-datepicker.js"></script>
    <script src="/js/purl.js"></script>
    <script src="/js/handlebars-1.0.rc.1.js"></script>
    <script src="/js/helpers.js"></script>
    <script src="js/bootstrap-notify.js"></script>
    <script src="/js/users.js"></script>
  </body>
</html>
